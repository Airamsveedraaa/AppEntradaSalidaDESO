<Window x:Class="AppEntradaSalidaDESO.Views.GeometryCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AppEntradaSalidaDESO.ViewModels"
        mc:Ignorable="d"
        Title="Calculadora de GeometrÃ­a de Disco" Height="650" Width="700"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:GeometryCalculatorViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Specs Inputs -->
            <RowDefinition Height="Auto"/> <!-- Results -->
            <RowDefinition Height="*"/>    <!-- Converter -->
        </Grid.RowDefinitions>

        <TextBlock Text="Calculadora de GeometrÃ­a de Disco" FontSize="18" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,15"/>

        <!-- Disk Specs inputs -->
        <GroupBox Grid.Row="1" Header="Especificaciones del Disco" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Col 0 -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Sectores por Pista"/>
                    <TextBox Text="{Binding Specs.SectorsPerTrack, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Caras (Superficies)"/>
                    <TextBox Text="{Binding Specs.Faces, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="0">
                   <TextBlock Text="Cilindros (Pistas)"/>
                   <TextBox Text="{Binding Specs.Cylinders, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Col 2 -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="TamaÃ±o Sector (Bytes)"/>
                    <TextBox Text="{Binding Specs.SectorSize, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="TamaÃ±o Bloque (Bytes)"/>
                    <TextBox Text="{Binding Specs.BlockSize, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Dynamic Results -->
        <Border Grid.Row="2" Margin="0,15,0,0" Background="#F0F8FF" Padding="10" BorderBrush="#007ACC" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="ðŸ“Š Resultados Calculados" FontWeight="Bold" FontSize="14" Foreground="#007ACC" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0 -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Bloques/Cilindro: " FontWeight="Normal"/>
                        <TextBlock Text="{Binding BlocksPerCylinder, StringFormat=N2}" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Sectores/Cilindro: " FontWeight="Normal"/>
                        <TextBlock Text="{Binding SectorsPerCylinder}" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>

                    <!-- Row 1 -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Bytes/Cilindro: " FontWeight="Normal"/>
                        <TextBlock Text="{Binding BytesPerCylinder, StringFormat=N0}" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Total Sectores: " FontWeight="Normal"/>
                        <TextBlock Text="{Binding TotalSectors, StringFormat=N0}" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>

                    <!-- Row 2 -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="Capacidad Total: " FontWeight="Normal"/>
                        <TextBlock Text="{Binding TotalCapacityBytes, StringFormat=N0}" FontWeight="Bold" Foreground="DarkBlue"/>
                        <TextBlock Text=" bytes" FontWeight="Normal" Margin="3,0,0,0"/>
                    </StackPanel>

                    <!-- Row 3 -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="â‰ˆ " FontWeight="Normal"/>
                        <TextBlock Text="{Binding TotalCapacityMB, StringFormat=N2}" FontWeight="Bold" Foreground="DarkBlue"/>
                        <TextBlock Text=" MB" FontWeight="Normal" Margin="3,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,3">
                        <TextBlock Text="â‰ˆ " FontWeight="Normal"/>
                        <TextBlock Text="{Binding TotalCapacityGB, StringFormat=N4}" FontWeight="Bold" Foreground="DarkBlue"/>
                        <TextBlock Text=" GB" FontWeight="Normal" Margin="3,0,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Block Converter -->
        <GroupBox Grid.Row="3" Header="Convertidor Bloque â†’ Pista" Margin="0,15,0,0" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Introduce nÃºmeros de bloque (separados por comas):"/>
                <TextBox Grid.Row="1" Text="{Binding BlockInputs, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,5,0,10" Height="50" TextWrapping="Wrap" AcceptsReturn="True"
                         ToolTip="Ejemplo: 754, 433, 285, 176"/>

                <TextBox Grid.Row="2" Text="{Binding ConversionResult}" IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto" Background="#F9F9F9" FontFamily="Consolas" FontSize="12"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
