<Window x:Class="AppEntradaSalidaDESO.Views.GeometryCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AppEntradaSalidaDESO.ViewModels"
        mc:Ignorable="d"
        Title="Calculadora de Geometría de Disco" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <vm:GeometryCalculatorViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,5,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="3"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Specs Inputs -->
            <RowDefinition Height="Auto"/> <!-- Convert Button or similar -->
            <RowDefinition Height="*"/>    <!-- Results -->
        </Grid.RowDefinitions>

        <TextBlock Text="Calculadora de Bloques a Pistas" FontSize="18" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,15"/>

        <!-- Disk Specs inputs -->
        <GroupBox Grid.Row="1" Header="Especificaciones del Disco" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Col 0 -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Sectores por Pista"/>
                    <TextBox Text="{Binding Specs.SectorsPerTrack}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Caras (Superficies)"/>
                    <TextBox Text="{Binding Specs.Faces}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="0">
                   <TextBlock Text="Cilindros (solo informativo)"/>
                   <TextBox Text="{Binding Specs.Cylinders}"/>
                </StackPanel>

                <!-- Col 2 -->
                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Tamaño Sector (Bytes)"/>
                    <TextBox Text="{Binding Specs.SectorSize}"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2">
                    <TextBlock Text="Tamaño Bloque (Bytes)"/>
                    <TextBox Text="{Binding Specs.BlockSize}"/>
                </StackPanel>

                 <!-- Calc Button inside group? Or auto-calc? Using explicit button is safer for user intent -->
                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
                        Command="{Binding CalculateCommand}" Content="Actualizar Cálculos" Margin="0,15,0,0" Padding="5"/>
            </Grid>
        </GroupBox>

        <!-- Dynamic Results -->
        <Border Grid.Row="2" Margin="0,15,0,0" Background="#F0F8FF" Padding="10">
            <StackPanel>
                <TextBlock Text="Resultados Geométricos:" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Bloques por Cilindro: " FontWeight="Normal"/>
                    <TextBlock Text="{Binding BlocksPerCylinder, StringFormat=N2}" FontWeight="Bold" Foreground="Green"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Block Converter -->
        <GroupBox Grid.Row="3" Header="Convertidor" Margin="0,15,0,0" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Introduce números de bloque (sep. por comas):"/>
                <TextBox Grid.Row="1" Text="{Binding BlockInputs}" Margin="0,5,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                
                <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,15"
                        Command="{Binding CalculateCommand}" Content="Convertir" Padding="10,5"/>

                <TextBox Grid.Row="2" Text="{Binding ConversionResult}" IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto" Background="#F9F9F9" FontFamily="Consolas"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
